[Unit]
Description = Gunicorn server for SITENAME

[Service]
Restart=on-failure
User=vt
WorkingDirectory=/home/vt/sites/SITENAME/source
ExecStart=/home/vt/sites/SITENAME/virtualenv/bin/gunicorn --bind unix:/tmp/SITENAME.socket superlists.wsgi:application
StartLimitInterval = 60
StartLimitBurst = 10

[Install]
WantedBy=multi-user.target